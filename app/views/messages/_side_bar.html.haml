
.side-bar
  .side-bar__box
    .users-box
      %p.users-box__names
        = current_user.name
      %ul.users-box__icons
        %li.users-box__icons__btn-new
          = link_to new_group_path do
            = icon('far','edit')
        %li.users-box__icons__btn-edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__groups
    - current_user.groups.each do |group|
      .groups-box
        = link_to group_messages_path(group) do
          .groups-box__name
            = group.name
          .groups-box__message
            = group.show_last_message
